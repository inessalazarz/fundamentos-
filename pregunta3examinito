
#include"stdafx.h"
#include <iostream>
#include "conio.h"
#include <cmath>

using namespace std;

int main()
{
    float d,i,menor;
    int x;
	cout << "cual es su numero" << endl;
	cin >> x;
	i = 1;
	menor = 9;
	while (x>0) {
		if ((x%10<menor)) {
			menor = (x%10);
			d = i;
		}
		i = i+1;
		x = int(x/10);
	}
	cout << "el numero menor" << menor << endl;
	cout << "su posicion es" << d << endl;
    getch();
    return 0;

}
